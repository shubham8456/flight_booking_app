<h1>Bookings</h1>

<table class="table table-striped table-bordered table-hover table-scroll">

  <thead class="table-dark">
  <tr>
    <th>Sr. No.</th>
    <th>User</th>
    <th>Origin</th>
    <th>Destination</th>
    <th>Departure</th>
    <th>Duration</th>
    <th>Seats Booked</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
    <% @bookings.each.with_index(1) do |booking, index| %>
    <tr>
      <td><%= index %></td>
      <td><%= booking.member.name %></td>
      <td><%= booking.schedule.flight.origin %></td>
      <td><%= booking.schedule.flight.destination %></td>
      <td><%= booking.schedule.flight.duration %></td>
      <td><%= booking.seats_booked %></td>
      <td><%=  %></td>
      <td><%= link_to 'Show', booking %></td>
      <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
      <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>

</table>

