<br/>
<div class="d-flex justify-content-between">
  <div>
    <h3>Your booking has been confirmed!</h3>
    <h4>Thanks for booking with us!</h4>
  </div>
  <%= image_tag("#{@booking.schedule.flight.operator}_logo.png", height: 80, class:"flight-logo") %>
</div>
<br/><br/>

<h3>Booking Details:</h3>

<table class="table table-striped table-bordered table-hover table-scroll">

  <thead class="table-dark">
  <tr>
    <th>Booked by</th>
    <th>Booking ID</th>
    <th>Operator</th>
    <th>Flight No.</th>
    <th>Origin</th>
    <th>Destination</th>
    <th>Departure</th>
    <th>Duration</th>
    <th>Seats Booked</th>
    <th>Total Paid (incl. GST)</th>
  </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= @booking.member.name %></td>
      <td><%= @booking.id + 276400 %></td> <!-- 276400 is just a random number for display purpose only -->
      <td><%= @booking.schedule.flight.operator %></td>
      <td><%= @booking.schedule.flight_id %></td>
      <td><%= @booking.schedule.flight.origin %></td>
      <td><%= @booking.schedule.flight.destination %></td>
      <td><%= @booking.schedule.departure.localtime %></td>
      <td><%= @booking.schedule.flight.duration %><span> mins.</span></td>
      <td><%= @booking.travellers.length %></td>
      <td><span>Rs. </span><%= @booking.travellers.length * (@booking.schedule.ticket_price * 1.05) %></td>
    </tr>
  </tbody>

</table>
<br/><br/>
<h3>Passenger Details:</h3>
<table class="table table-striped table-bordered table-hover table-scroll">

  <thead class="table-dark">
  <tr>
    <th width="10%">Sr. No.</th>
    <th>Name</th>
    <th>Gender</th>
    <th>Age</th>
  </tr>
  </thead>

  <tbody>
  <% @booking.travellers.each.with_index(1) do |traveller, index| %>
    <tr>
      <td><%= index %></td>
      <td><%= traveller.name %></td>
      <td><%= traveller.gender %></td>
      <td><%= traveller.age %></td>
    </tr>
  <% end %>
  </tbody>

</table>

<br/>
<%= link_to 'Print', booking_path, onclick: 'window.print();return false;', class: "btn btn-primary"%>

