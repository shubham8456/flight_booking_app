<div class="signup-form-container">
  <div class="signup-form">
    <h2>Sign up on Flight Booking App</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "field-box" %>
      </div>

      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "field-box" %>
      </div>

      <div class="field">
        <%= f.label :phone %><br />
        <%= f.text_field :phone, autofocus: true, autocomplete: "phone", class: "field-box" %>
      </div>

      <%= f.hidden_field :type, value: "Member" %>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "field-box" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "field-box" %>
      </div>

      <div class="actions mt-5">
        <%= f.submit "Sign up", class: "btn btn-primary" %>
      </div>
    <% end %>

  </div>
  <%= render "devise/shared/links" %>
</div>

