<div class="header-title">
  <%= link_to main_app.schedules_path do %>
    <span class="header-text">Flight Booking App !</span>
    <%= image_tag("airplane_logo.png", height: 50, class:"website-logo") %>
  <% end %>

  <div class="header-buttons">
    <% is_user_signed_in do %>
      <%= link_to "Sign Out", main_app.destroy_user_session_path, method: :delete, class: "btn btn-dark"%>
    <% end %>
    <% is_user_not_signed_in do %>
      <%= link_to "Sign In", main_app.new_user_session_path, class: "btn btn-dark" %>
    <% end %>
  </div>
</div>