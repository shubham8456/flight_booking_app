<h4> All flights </h4>

<table class="table table-striped table-bordered table-hover">

  <thead class="table-dark">
  <tr>
    <th>Flight No.</th>
    <th>Operator</th>
    <th>Origin</th>
    <th>Destination</th>
    <th>Duration</th>
    <th>Total Seats</th>
    <% if user_signed_in? && current_user.type === 'Admin' %>
      <th colspan="1"></th>
    <% end %>
  </tr>
  </thead>

  <tbody>
  <% @flights.each do |flight| %>
    <tr>
      <td><%= flight.flight_no %></td>
      <td><%= flight.operator %></td>
      <td><%= flight.origin %></td>
      <td><%= flight.destination %></td>
      <td><%= flight.duration %><span> mins.</span></td>
      <td><%= flight.total_seats %></td>
      <% if user_signed_in? && current_user.type === 'Admin' %>
        <th><%= link_to "Edit", edit_flight_path(flight), class: "btn btn-dark btn-sm" %></th>
      <% end %>
    </tr>
  <% end %>
  </tbody>

</table>

<%= will_paginate @flights, class: "d-flex justify-content-center" %>

<%= link_to "Add new flight", new_flight_path, class:"btn btn-dark" %>